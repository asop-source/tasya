<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="label_57x35">
        <table class="table" style="margin: 0; padding: 0;">
            <tbody style="border: 0;">
                <tr height="144px" style="border:0;margin:0;padding:0;">
                    <td class="col-xs-4 text-center" style="border:0;margin:0;padding:0;">
                        <div style="overflow:hidden; height:65px !important; padding: 5px 5px 0; line-height: 1.2;">
                             <span t-field="label.product_id.name" style="line-height: 1.2;"/>
                             <span t-if="label.product_id.product_template_attribute_value_ids"
                                   t-esc="u', '.join(map(lambda x: x.attribute_line_id.attribute_id.name + u': ' + x.name, label.product_id.product_template_attribute_value_ids))"
                                   class="badge"/>
                        </div>
                        <div style="width: 100%; padding: 0; margin: 0; font-size: 21px; font-weight: bold;">
                            <span t-if="label.product_id.currency_id.position == 'before'" t-field="label.product_id.currency_id.symbol"/>
                            <span t-field="label.product_id.lst_price"/>
                            <span t-if="label.product_id.currency_id.position == 'after'" t-field="label.product_id.currency_id.symbol"/>
                        </div>
                        <div t-if="label.product_id.default_code" style="width: 100%; padding: 0; margin: 0; font-size: 12px;">
                            <span t-field="label.product_id.default_code"/>
                        </div>
                        <t t-if="label.product_id.barcode">
                            <div t-out="label.product_id.barcode" t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': 'overflow: hidden; width: 100%; height: 1.4rem;', 'humanreadable': label.wizard_id.humanreadable}"/>
                        </t>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>

    <template id="report_product_label_57x35_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-set="count" t-value="0" />
                <div class="page">
                    <div class="oe_structure"/>
                    <t t-foreach="docs" t-as="label">
                        <t t-set="qty" t-value="1" />
                        <t t-if="label.qty">
                            <t t-set="qty" t-value="label.qty" />
                        </t>
                        <t t-foreach="list(range(qty))" t-as="index_qty">
                            <div t-if="count % 21 == 0" style="page-break-after:always;"/>
                            <div t-if="count % 3 == 0" style="clear:both;"/>
                            <div t-att-style="'width: 233px; float: left; height: 145px; margin: 0 4px 4px; border: {};'.format('%dpx solid #777;' % label.wizard_id.border_width if label.wizard_id.border_width else '0')">
                                <t t-call="garazd_product_label.label_57x35"/>
                            </div>
                            <t t-set="count" t-value="count+1" />
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>
    
    <template id="report_product_label_50_x_30_mm_template">
        <t t-call="web.html_container">
        <t t-set="company" t-value="env.company"/>
        <!-- Konversi ukuran: 50mm ≈ 189px, 30mm ≈ 113px pada 96 DPI -->
        <t t-foreach="docs" t-as="label">
            <t t-set="qty" t-value="1"/>
            <t t-if="label.qty > 0" t-set="qty" t-value="label.qty" />
            <t t-foreach="list(range(qty))" t-as="index_qty">
            <div class="page" style="width: 189px; height: 110px; padding: 2px; font-size: 9px; font-family: Arial; box-sizing: border-box;">
                <table style="width: 100%; height: 100%; border: 0; margin: 0;">
                    <tr>
                        <!-- QR Code -->
                        <td style="width: 40%; text-align: center; padding-right: 3px;">
                            <div t-field="label.product_id.default_code"
                                 t-options="{'widget': 'barcode', 'symbology': 'QR', 'width': 80, 'height': 80, 'humanreadable': 0}"/>
                            <div style="margin-top: 1px; background: #e3f2fd; padding: 1px 2px; font-size: 7px; font-weight: bold;">
                                <span t-esc="label.product_id.default_code or ''"/>
                            </div>
                        </td>

                        <td style="width: 55%; padding-left: 3px; border-left: 1px solid #000;">
                            <!-- Logo Perusahaan -->
                            <div style="text-align: right; font-weight: bold; font-size: 9px; padding: 2px;">
                                 <img t-if="label.company_id.logo" 
                                         t-att-src="'%s/web/image/res.company/%s/logo' % (label.get_base_url(), label.company_id.id)" 
                                         alt="Company Logo" 
                                         style="max-height: 20px;"/>
                            </div>

                            <!-- Nama Produk -->
                            <div style="font-size: 9px; padding: 2px; line-height: 1.1;">
                                <span t-esc="label.product_id.name"/>
                            </div>

                            <!-- Harga -->
                            <div t-if="label.strikethrough" style="text-align: center; font-size: 9px; padding: 3px;">
                                <span style="text-decoration: line-through; color: gray;">
                                    Rp. <span t-esc="'{:,.0f}'.format(label.product_id.list_price)"/>
                                </span>
                                <br/>
                                <span style="font-weight: bold; font-size: 9px;">
                                    Rp. <span t-esc="'{:,.0f}'.format(label.product_id.standard_price)"/>
                                </span>
                            </div>
                           <div t-else="" style="text-align: center; font-size: 9px; padding: 3px;">
                                <span style="font-weight: bold; font-size: 9px;">
                                    Rp. <span t-esc="'{:,.0f}'.format(label.product_id.list_price)"/>
                                </span>
                           </div>

                            <!-- Color dan Material -->
                           <div style="font-size: 7px; padding: 1px; line-height: 1.1;">
                                Color:
                                <span t-esc="', '.join([a.name for a in label.product_id.product_template_attribute_value_ids if a.attribute_id.name and a.attribute_id.name == 'Warna'])"/>
                            </div>
                            <div style="font-size: 7px; padding: 1px; line-height: 1.1;">
                                Material:
                                <span t-esc="', '.join([a.name for a in label.product_id.product_template_attribute_value_ids if a.attribute_id.name and a.attribute_id.name == 'Bahan'])"/>
                            </div>
                        </td>

                        <!-- Kolom tanggal vertikal -->
                        <td style="width: 5%; text-align: center; font-size: 7px;">
                          <div style="-ms-transform: rotate(270deg); -webkit-transform: rotate(270deg);">
                                <b>
                                    <span t-esc="time.strftime('%d%m%y')"/>
                                </b>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            </t>
        </t>
    </t>
    </template>


    <template id="report_product_label_66x25_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="label">
                    <t t-set="qty" t-value="1"/>
                    <t t-if="label.qty" t-set="qty" t-value="label.qty" />
                    <t t-foreach="list(range(qty))" t-as="index_qty">
                        <div class="page" style="page-break-after: always;">
                            <div style="height: 89px !important; width: 218px !important;">
                                <table class="table" t-att-style="'height: 100%; border: {};'.format('%dpx solid #777;' % label.wizard_id.border_width if label.wizard_id.border_width else '0')">
                                    <tbody style="border: 0;">
                                        <tr height="89px" style="border: 0;">
                                            <td class="text-center" style="padding: 0; margin: 0; border: 0;">
                                                <div style="overflow: hidden; height: 45px !important; font-size: 13px; line-height: 1.175; margin-bottom: 3px; text-align: left;">
                                                    <span t-field="label.product_id.name" style="line-height: 1.175;"/>
                                                    <span t-if="label.product_id.product_template_attribute_value_ids"
                                                          t-out="u', '.join(map(lambda x: x.attribute_line_id.attribute_id.name + u': ' + x.name, label.product_id.product_template_attribute_value_ids))"
                                                          class="badge"/>
                                                </div>
                                                <div style="width: 100%; overflow: hidden; height: 40px !important;">
                                                    <div style="float: left; width: 60%; font-size: 20px; font-weight: bold; line-height: 1.0; text-align: right; margin-bottom: 0px;">
                                                        <t t-if="label.product_id.barcode" style="height: 16px !important; margin: 2px 0;">
                                                            <div t-out="label.product_id.barcode" style="margin-left: 2px;" t-options="{'widget': 'barcode', 'quiet': 0, 'symbology': 'auto', 'img_style': 'overflow: hidden; width: 100%; height: 1.5rem;', 'humanreadable': label.wizard_id.humanreadable}"/>
                                                            <div t-if="not label.wizard_id.humanreadable" t-field="label.product_id.barcode" style="font-size: 10px; font-weight: normal; text-align: left; margin-left: 2px; margin-top: 2px;"/>
                                                        </t>
                                                    </div>
                                                    <div style="float: right; width: 40%;">
                                                        <div style="width: 100%; font-size: 16px; font-weight: 900; line-height: 1.0; text-align: right; margin-bottom: 2px;">
                                                            <span t-if="label.product_id.currency_id.position == 'before'" t-field="label.product_id.currency_id.symbol"/>
                                                            <span t-field="label.product_id.lst_price"/>
                                                            <span t-if="label.product_id.currency_id.position == 'after'" t-field="label.product_id.currency_id.symbol"/>
                                                        </div>
                                                        <div t-if="label.product_id.default_code" style="width: 100%; font-size: 9px; font-weight: 900; line-height: 1.0; text-align: center; background: #000; color: #FFF; margin-left: 3px;">
                                                            <span t-field="label.product_id.default_code"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <template id="report_product_label_from_template">
        <t t-call="web.basic_layout"/>
    </template>

</odoo>
