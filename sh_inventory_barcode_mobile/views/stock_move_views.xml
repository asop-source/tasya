<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Stock Move Wizard Form -->
    <record id="sh_inventory_barcode_mobile_stock_move_operations" model="ir.ui.view">
        <field name="name">sh.inventory.barcode.mobile.stock.move.operations</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations" />
        <field name="arch" type="xml">
            <xpath expr="//group/group" position="inside">
                <field name="sh_stock_move_bm_is_cont_scan" invisible="True" />
                <field name="sh_stock_move_barcode_mobile" widget="sh_char_barcode" invisible="state == 'cancel' or (state == 'done' and is_locked)" options="{'continuously_scan_field':'sh_stock_move_bm_is_cont_scan'}" />
            </xpath>
        </field>
    </record>

</odoo>
